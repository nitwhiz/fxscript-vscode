{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "wordPattern": "[a-zA-Z0-9_\\-\\$\\%\\@]+",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(macro\\s+|[a-zA-Z_][a-zA-Z0-9_-]*:|%_[a-zA-Z0-9_-]*:)",
    "decreaseIndentPattern": "^\\s*endmacro"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(macro\\s+|[a-zA-Z_][a-zA-Z0-9_-]*:|%_[a-zA-Z0-9_-]*:)(\\s*#.*)?$",
      "action": {
        "indentAction": "indent"
      }
    },
    {
      "beforeText": "^\\s*endmacro.*$",
      "action": {
        "indentAction": "outdent"
      }
    }
  ]
}
