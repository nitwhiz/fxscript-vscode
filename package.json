{
  "name": "arena-movescript",
  "displayName": "Arena MoveScript",
  "description": "Syntax highlighting and IntelliSense for Arena MoveScript (*.ms).",
  "version": "0.1.0",
  "publisher": "nitwhiz",
  "repository": "https://github.com/nitwhiz/arena-movescript-vscode",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "movescript-explorer",
          "title": "MoveScript",
          "icon": "$(search-stop)"
        }
      ]
    },
    "views": {
      "movescript-explorer": [
        {
          "id": "movescript-todo",
          "name": "Unimplemented (goto _notImplemented)",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "movescript.openUnimplemented",
        "title": "Open Unimplemented Location"
      },
      {
        "command": "movescript.refreshUnimplemented",
        "title": "Refresh Unimplemented List",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "movescript.refreshUnimplemented",
          "when": "view == movescript-todo",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "movescript",
        "aliases": ["MoveScript", "movescript"],
        "extensions": [".ms"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "movescript",
        "scopeName": "source.movescript",
        "path": "./syntaxes/movescript.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:movescript",
    "onView:movescript-todo",
    "onCommand:movescript.openUnimplemented",
    "onCommand:movescript.refreshUnimplemented"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "generate": "node scripts/generate-movescript-json.js",
    "package": "vsce package -o arena-movescript.vsix",
    "vscode:install:mac": "'/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code' --install-extension arena-movescript.vsix",
    "vscode:install": "code --install-extension arena-movescript.vsix"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "@types/vscode": "^1.100.0",
    "typescript": "^5.4.0",
    "@vscode/vsce": "^3.7.1"
  },
  "dependencies": {}
}
