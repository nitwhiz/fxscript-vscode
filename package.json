{
  "publisher": "nitwhiz",
  "name": "fxscript-vscode",
  "displayName": "FXScript",
  "description": "VSCode extension for FXScript",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nitwhiz/fxscript-vscode.git"
  },
  "activationEvents": [
    "onLanguage:fxscript"
  ],
  "main": "./out/vscode/Extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fxscript",
        "aliases": [
          "FXScript"
        ],
        "extensions": [
          ".fx"
        ],
        "firstLine": "^\\s*(@include|macro|var|def|#|[a-zA-Z_][a-zA-Z0-9_-]*:|goto|call|ret|jumpIf|\\/\\/)",
        "mimetypes": [
          "text/x-fxscript"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fxscript",
        "scopeName": "source.fx",
        "path": "./syntaxes/fxscript.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": []
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "vscode:prepublish": "npm run build",
    "vscode:dev": "npm run build && code --extensionDevelopmentPath=$(pwd) --user-data-dir=$(pwd)/.vscode-test/user-data examples/script",
    "vscode:install": "npm run package && code --install-extension fxscript-vscode-$(node -p \"require('./package.json').version\").vsix"
  },
  "devDependencies": {
    "@types/node": "24.x",
    "@types/vscode": "^1.90.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^3.2.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.1.0"
  }
}
