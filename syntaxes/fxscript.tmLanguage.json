{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FXScript",
  "scopeName": "source.fxscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#labels" },
    { "include": "#macro-block" },
    { "include": "#macro-calls" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#commands" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fxscript",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "match": "(?i)^\\s*(@include)\\b\\s+([A-Za-z0-9_.-]+)",
          "captures": {
            "1": { "name": "keyword.control.directive.fxscript" }
          }
        },
        {
          "match": "(?i)^\\s*(const)\\b\\s+([A-Za-z_][A-Za-z0-9_-]*)",
          "captures": {
            "1": { "name": "keyword.other.fxscript" }
          }
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.type.label.fxscript",
          "match": "^(\\s*)([A-Za-z_][A-Za-z0-9_-]*)(\\s*:)",
          "captures": {
            "2": { "name": "entity.name.type.label.fxscript" },
            "3": { "name": "punctuation.separator.label.fxscript" }
          }
        }
      ]
    },
    "macro-block": {
      "patterns": [
        {
          "begin": "(?i)^(\\s*)(macro)\\b\\s+([A-Za-z_][A-Za-z0-9_-]*)",
          "beginCaptures": {
            "2": { "name": "storage.type.macro.fxscript" },
            "3": { "name": "entity.name.function.macro.fxscript" }
          },
          "end": "(?i)^(\\s*)(endmacro)\\b",
          "endCaptures": {
            "2": { "name": "storage.type.macro.fxscript" }
          },
          "name": "meta.macro.fxscript",
          "patterns": [
            { "include": "#comments" },
            { "include": "#keywords" },
            { "include": "#macro-calls" },
            { "include": "#commands" },
            { "include": "#strings" },
            { "include": "#numbers" }
          ]
        }
      ]
    },
    "macro-calls": {
      "patterns": [
        {
          "name": "entity.name.function.macro.fxscript",
          "match": "(?i)^(\\s*)(canceler|moveHit|randMultiHitCounter2To5)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.fxscript",
          "match": "(?i)(^|\\s)(call|ret|goto)\\b"
        },
        {
          "name": "storage.type.macro.fxscript",
          "match": "(?i)(^|\\s)(macro|endmacro)\\b"
        },
        {
          "name": "keyword.other.fxscript",
          "match": "(?i)(^|\\s)(const)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fxscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fxscript",
              "match": "\\\\."
            },
            {
              "name": "variable.interpolation.fxscript",
              "match": "\\{[A-Za-z_][A-Za-z0-9_-]*\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.fxscript",
          "match": "(?<![A-Za-z_\\\"])(?:[+-]?)(?:\\\\d+)(?:\\\\.\\\\d+)?\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.enummember.fxscript",
          "match": "\\b[A-Za-z_][A-Za-z0-9_-]*\\b"
        }
      ]
    },
    "const-usage": {
      "patterns": [
        {
          "match": "\\b[A-Za-z_][A-Za-z0-9_-]*\\b"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "include": "#const-usage"
        },
        {
          "name": "support.function.command.fxscript",
          "match": "(?i)^(\\s*)(?:(?!macro|endmacro|const|@include|call|ret|goto)[A-Za-z_][A-Za-z0-9_-]*)\\b"
        },
        { "include": "#variables" },
        {
          "name": "punctuation.separator.comma.fxscript",
          "match": ","
        },
        {
          "name": "keyword.operator.arithmetic.fxscript",
          "match": "[-+*/%]"
        }
      ]
    }
  }
}
