{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FXScript",
  "scopeName": "source.fx",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fx",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.include.fx",
          "match": "@include\\b"
        },
        {
          "name": "keyword.other.const.fx",
          "match": "@const\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.var.fx",
          "match": "\\bvar\\b"
        },
        {
          "name": "keyword.other.const.fx",
          "match": "\\bconst\\b"
        },
        {
          "name": "keyword.other.macro.fx",
          "match": "\\b(macro|endmacro)\\b"
        },
        {
          "name": "keyword.other.macro-call.fx",
          "match": "\\b(set|goto|call|ret|jumpIf|exit)\\b"
        },
        {
          "name": "keyword.other.macro-call.fx",
          "match": "(?<=^|\\s)[a-zA-Z_][a-zA-Z0-9_-]*\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.function.macro.fx",
          "match": "(?<=macro\\s+)[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
          "name": "entity.name.function.label.fx",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*:"
        },
        {
          "name": "entity.name.function.label.local.fx",
          "match": "%(_|[a-zA-Z])[a-zA-Z0-9_-]*:?"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.fx",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.fx",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.fx",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.decimal.fx",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.fx",
          "match": "(\\+|\\-|\\*|\\/|%|&|\\||\\^|~|<<|>>|==|!=|<|>|<=|>=|!|=)"
        }
      ]
    }
  }
}
