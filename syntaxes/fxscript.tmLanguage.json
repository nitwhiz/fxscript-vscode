{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FXScript",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#commands"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fx",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.fx",
          "match": "^\\s*@(include|const)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fx",
          "match": "\\b(macro|endmacro|const|var)\\b"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "name": "keyword.other.command.fx",
          "match": "\\b(set|goto|call|ret|jumpIf|nop|push|pop)\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.function.label.fx",
          "match": "^\\s*([%_a-zA-Z0-9]+):"
        },
        {
          "name": "entity.name.function.label.fx",
          "match": "(?<=goto|call|jumpIf)\\s+([%_a-zA-Z0-9]+)"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.hex.fx",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.fx",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.fx",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "string.quoted.double.fx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fx",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.fx",
          "match": "(\\+|\\-|\\*|/|&|\\||\\^|<<|>>|==|!=|<|>|<=|>=|!|~)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.fx",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.macroarg.fx",
          "match": "\\$[a-zA-Z0-9_]+"
        }
      ]
    }
  },
  "scopeName": "source.fx"
}
