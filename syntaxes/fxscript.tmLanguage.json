{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Arena FXScript",
  "scopeName": "source.fxscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#labels" },
    { "include": "#macro-block" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#commands" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fxscript",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.fxscript",
          "match": "(^|\\s)(@include)\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "meta.label.fxscript",
          "match": "^(\\s*)([A-Za-z_][A-Za-z0-9_-]*)(\\s*:)",
          "captures": {
            "2": { "name": "entity.name.function.label.fxscript" },
            "3": { "name": "punctuation.separator.label.fxscript" }
          }
        }
      ]
    },
    "macro-block": {
      "patterns": [
        {
          "begin": "^(\\s*)(macro)\\b\\s+([A-Za-z_][A-Za-z0-9_-]*)",
          "beginCaptures": {
            "2": { "name": "storage.type.macro.fxscript" },
            "3": { "name": "entity.name.function.macro.fxscript" }
          },
          "end": "^(\\s*)(endmacro)\\b",
          "endCaptures": {
            "2": { "name": "storage.type.macro.fxscript" }
          },
          "name": "meta.macro.fxscript",
          "patterns": [
            { "include": "#comments" },
            { "include": "#keywords" },
            { "include": "#commands" },
            { "include": "#strings" },
            { "include": "#numbers" }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.fxscript",
          "match": "(^|\\s)(call|ret|goto)\\b"
        },
        {
          "name": "storage.type.macro.fxscript",
          "match": "(^|\\s)(macro|endmacro)\\b"
        },
        {
          "name": "storage.type.const.fxscript",
          "match": "(^|\\s)(const)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fxscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fxscript",
              "match": "\\\\."
            },
            {
              "name": "variable.interpolation.fxscript",
              "match": "\\{[A-Za-z_][A-Za-z0-9_-]*\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.fxscript",
          "match": "(?<![A-Za-z_\\\"])(?:[+-]?)(?:\\\\d+)(?:\\\\.\\\\d+)?\\b"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "name": "support.function.command.fxscript",
          "match": "^(\\s*)(?:(?!macro|endmacro|const|@include|call|ret|goto)[A-Za-z_][A-Za-z0-9_-]*)\\b"
        },
        {
          "name": "punctuation.separator.comma.fxscript",
          "match": ","
        },
        {
          "name": "keyword.operator.arithmetic.fxscript",
          "match": "[-+*/%]"
        }
      ]
    }
  }
}
