{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FXScript",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#commands"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fx",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "match": "(@include)\\s+([a-zA-Z0-9\\._-]+)",
          "captures": {
            "1": { "name": "keyword.control.directive.fx" },
            "2": { "name": "string.other.filename.fx" }
          }
        },
        {
          "match": "^\\s*(@const)\\s+([^\\s#]+)",
          "captures": {
            "1": { "name": "keyword.control.directive.fx" },
            "2": { "name": "variable.other.fx" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fx",
          "match": "\\b(macro|endmacro|const|var)\\b"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "name": "keyword.other.command.fx",
          "match": "^\\s*[a-zA-Z0-9_\\.\\$\\-]+(?=\\s|$)"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.function.label.fx",
          "match": "^\\s*([%_a-zA-Z0-9\\.\\$\\-]+):(?!\\S)"
        },
        {
          "match": "(?i)\\b(goto|call|jumpIf|accuracyCheck|if|else|while|until)\\b\\s+([%_a-zA-Z0-9\\.\\$\\-]+)",
          "captures": {
            "1": { "name": "keyword.other.command.fx" },
            "2": { "name": "entity.name.function.label.fx" }
          }
        },
        {
          "match": "(,)\\s*([%_a-zA-Z0-9\\.\\$\\-]+)",
          "captures": {
            "1": { "name": "punctuation.separator.comma.fx" },
            "2": { "name": "entity.name.function.label.fx" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fx",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.hex.fx",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.fx",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.fx",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.fx",
          "match": "(\\+|\\-|\\*|/|&|\\||\\^|<<|>>|==|!=|<|>|<=|>=|!|~)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.fx",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.macroarg.fx",
          "match": "\\$[a-zA-Z0-9_]+"
        }
      ]
    }
  },
  "scopeName": "source.fx"
}
